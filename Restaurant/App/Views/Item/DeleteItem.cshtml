@model DAL.Models.Item
@{
    ViewBag.Title = "DeleteItem";
}

<div style="margin-top:50px; padding:10px;">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Delete Confirmation!</h4>
            <hr>
            <p class="mb-0">Do you really want to delete this item ?</p>
            <br />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "GetAll")
        </div>
    }
</div>